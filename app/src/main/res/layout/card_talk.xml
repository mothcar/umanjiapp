<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/talkCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="14dp"
    android:paddingRight="14dp"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:layout_marginBottom="1dp"
    >

    <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/userPhoto"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:src="@drawable/avatar_default_0"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="bruce"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="14dp"
        android:textColor="@color/black"
        android:layout_alignTop="@+id/createdAt"
        android:layout_toRightOf="@+id/userPhoto"
        android:layout_toEndOf="@+id/userPhoto" />

    <TextView
        android:id="@+id/parentType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="종류"
        android:textColor="@color/text"
        android:textSize="12dp"
        android:visibility="visible"
        android:layout_alignTop="@+id/parentName"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/parentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="없음"
        android:textColor="@color/text"
        android:textSize="12dp"
        android:textStyle="bold"
        android:visibility="visible"
        android:layout_alignTop="@+id/createdAt"
        android:layout_toRightOf="@+id/parentType"
        android:layout_toEndOf="@+id/parentType"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="307dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="내용입니다."
        android:textSize="12dp"
        android:textColor="@color/gray_text"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/userName"
        android:layout_alignStart="@+id/userName" />

    <TextView
        android:id="@+id/createdAt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2015:11:05"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textColor="@color/gray_text"
        android:textSize="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
