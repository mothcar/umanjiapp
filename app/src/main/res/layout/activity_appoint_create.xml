            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:textColor="#000"
                        android:text="지   역 :"
                        android:layout_alignTop="@+id/submitBtn2"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:id="@+id/manage_area"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:textColor="#555"
                        android:text="광고관리지역"
                        android:layout_alignTop="@+id/submitBtn2"
                        android:layout_centerHorizontal="true"/>
                    </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:textColor="#000"
                        android:text="관리자 :"
                        android:layout_alignTop="@+id/submitBtn2"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:id="@+id/manager"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:textColor="#555"
                        android:hint="강옥남"
                        android:layout_alignTop="@+id/submitBtn2"
                        android:layout_centerHorizontal="true"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/candidate1"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_launcher"
                            android:layout_marginRight="20dp"/>
                        <TextView
                            android:id="@+id/candidateName1"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="후보자"/>
                        <TextView
                            android:id="@+id/candidatePoint1"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="300"/>

                        <RadioButton
                            android:id="@+id/radioButton1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/candidate2"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_launcher"
                            android:layout_marginRight="20dp"/>

                        <TextView
                            android:id="@+id/candidateName2"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="후보자"/>
                        <TextView
                            android:id="@+id/candidatePoint2"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="200"/>

                        <RadioButton
                            android:id="@+id/radioButton2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/candidate3"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_launcher"
                            android:layout_marginRight="20dp"/>

                        <TextView
                            android:id="@+id/candidateName3"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="후보자"/>
                        <TextView
                            android:id="@+id/candidatePoint3"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="100"/>

                        <RadioButton
                            android:id="@+id/radioButton3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>


                </RadioGroup>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/appointment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="임명"/>

                <Button
                    android:id="@+id/dismissal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="해임"/>


            </LinearLayout>



