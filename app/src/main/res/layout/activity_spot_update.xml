<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="40dp"
            android:layout_height="@dimen/tabs_height"
            app:layout_collapseMode="pin"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        <TextView
            android:id="@+id/headerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="각종 수정 및 정보갱신"
            android:textColor="#fff"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/submitBtn2"
            android:layout_width="50dp"
            android:layout_height="@dimen/tabs_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="완료"
            android:textColor="#fff"
            android:textSize="16dp" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/createForm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/photo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/empty_image" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:background="#77ffffff"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/photoBtn"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/gallaryBtn"
                        android:layout_toStartOf="@+id/gallaryBtn"
                        android:src="@drawable/icon_camera_png" />

                    <ImageView
                        android:id="@+id/gallaryBtn"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/icon_picture_png" />


                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp">

                <TextView
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:hint="서울특별시 동작구 ..."
                    android:inputType="text"
                    android:maxLines="2"
                    android:singleLine="false"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="장소이름"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="삼구골프클럽"
                    android:textColorHint="@color/timestamp"
                    android:paddingLeft="10dp"
                    android:textSize="16dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:text="대표단어"
                    android:gravity="center_vertical"
                    android:textSize="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/textView"
                    android:layout_toRightOf="@+id/textView"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <EditText
                        android:id="@+id/keywordName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:hint="장소를 대표하는 단어"
                        android:textColorHint="@color/timestamp"
                        android:paddingLeft="10dp"
                        android:textSize="16dp" />

                    <Button
                        android:id="@+id/addKeywordBtn"
                        style="?android:textAppearanceSmall"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:layout_weight="0.3"
                        android:padding="0dp"
                        android:text="추가"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/keywordPanel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginLeft="80dp">

                <TextView
                    android:id="@+id/keyword1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:shadowColor="#000"
                    android:shadowRadius="7.0"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/keyword2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:padding="5dp"
                    android:shadowColor="#000"
                    android:shadowRadius="7.0"
                    android:textSize="16dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="장소위치"
                    android:textSize="16dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/floor"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:hint="1"
                        android:textColorHint="@color/timestamp"
                        android:paddingLeft="10dp"
                        android:textSize="16dp" />

                    <CheckBox
                        android:id="@+id/basementCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/floor"
                        android:layout_toRightOf="@+id/floor"
                        android:layout_weight="0.5"
                        android:checked="false"
                        android:text="지하" />
                </RelativeLayout>

            </LinearLayout>

            <!-- 여기서 부터 다음에 추가하기 : 이번에는 위에 있는데 까지만 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="전화번호"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/telephoneNumber"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:hint="예 : 02-2222-1234"
                    android:textColorHint="@color/timestamp"
                    android:paddingLeft="10dp"
                    android:phoneNumber="true"
                    android:textSize="16dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="홈페이지"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/homepageUrl"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:hint="www.umanji.com"
                    android:textColorHint="@color/timestamp"
                    android:paddingLeft="10dp"
                    android:textSize="16dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="운영시간"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/openTime"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:hint="평일 10:00~24:00"
                    android:textColorHint="@color/timestamp"
                    android:paddingLeft="10dp"
                    android:textSize="16dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="시설정보"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/facilities"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:hint="모유수유실 / 주차장"
                    android:textColorHint="@color/timestamp"
                    android:paddingLeft="10dp"
                    android:textSize="16dp" />

            </LinearLayout>


            <Button
                android:id="@+id/submitBtn"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="변경"
                android:textStyle="bold"
                android:visibility="gone" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>
