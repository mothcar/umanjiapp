<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.sothree.slidinguppanel.SlidingUpPanelLayout xmlns:sothree="http://schemas.android.com/apk/res-auto"
        android:id="@+id/slidingUpPanelLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        sothree:umanoPanelHeight="200dp"
        sothree:umanoParallaxOffset="200dp"
        sothree:umanoShadowHeight="4dp">

        <!-- MAIN CONTENT -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <fragment
                android:id="@+id/mMapFragment"
                android:name="com.google.android.gms.maps.MapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout="@layout/activity_main" />

            <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                android:id="@+id/relativeLayout8">

                <ImageView
                    android:id="@+id/userPhoto"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon_user_person"
                    android:visibility="visible" />

                <LinearLayout
                    android:id="@+id/searchLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:visibility="visible"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true">

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:id="@+id/logo"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="umanji"
                        android:textColor="@color/gray_text"
                        android:textSize="16dp"
                        android:layout_alignTop="@+id/titleLayout"
                        android:layout_toRightOf="@+id/userPhoto"
                        android:layout_toEndOf="@+id/userPhoto" />

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:id="@+id/search"
                        android:layout_width="180dp"
                        android:layout_height="35dp"
                        android:text="search"
                        android:textColor="@color/gray_text"
                        android:background="@drawable/shadow"
                        android:layout_toRightOf="@+id/logo"
                        android:layout_toEndOf="@+id/logo"
                        android:gravity="center_vertical|right"
                        android:paddingLeft="10dp"
                        android:textSize="14dp"
                        android:visibility="visible"
                        android:paddingRight="10dp" />

                    <TextView
                        android:id="@+id/mainTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="커뮤니티"
                        android:textColor="@color/gray_text"
                        android:textSize="16dp"
                        android:visibility="gone"/>

                </LinearLayout>

                <ImageView
                    android:id="@+id/community_close_button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/linearLayout6"
                    android:src="@drawable/ic_ex_temp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/mNotyCount"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/default_btn_red_radius"
                    android:shadowColor="#A8A8A8"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="5"
                    android:text="0"
                    android:textColor="#FFFFFF"
                    android:textSize="10dp"
                    android:visibility="gone"
                    android:layout_alignTop="@+id/userPhoto"
                    android:layout_toRightOf="@+id/userPhoto"
                    android:layout_toEndOf="@+id/userPhoto" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_above="@+id/ads_image"
                android:background="@color/gray_soft" />

            <ImageView
                android:id="@+id/ads_image"
                android:layout_width="400dp"
                android:layout_height="53dp"
                android:scaleType="fitXY"
                android:src="@drawable/ads_umanji_guide"
                android:layout_below="@+id/relativeLayout8"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <RelativeLayout
                android:id="@+id/relativeLayout3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ads_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp">

                <!--<com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/mAvatarImageBtn"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/avatar_default_0"
                    app:riv_border_color="@color/colorPrimary"
                    app:riv_border_width="1px"
                    app:riv_corner_radius="5dp"
                    app:riv_oval="false" />-->

                <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/homeBtn"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon_home"
                    app:riv_border_color="@color/colorPrimary"
                    app:riv_border_width="1px"
                    app:riv_corner_radius="33dp"
                    app:riv_oval="false"
                    android:visibility="gone"/>


            </RelativeLayout>


            <TextView
                android:id="@+id/mZoomLevelText"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="140dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_label"
                android:gravity="center"
                android:text="12"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold" />

            <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/mZoomBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="94dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/zoom_btn"
                android:padding="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/zoom_in"
                app:riv_corner_radius="5dp"
                app:riv_oval="false" />

            <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
