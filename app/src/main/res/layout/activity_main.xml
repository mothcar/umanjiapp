<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.sothree.slidinguppanel.SlidingUpPanelLayout xmlns:sothree="http://schemas.android.com/apk/res-auto"
        android:id="@+id/slidingUpPanelLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        sothree:umanoPanelHeight="200dp"
        sothree:umanoParallaxOffset="200dp"
        sothree:umanoShadowHeight="4dp">

        <!-- MAIN CONTENT -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <fragment
                android:id="@+id/mMapFragment"
                android:name="com.google.android.gms.maps.MapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout="@layout/activity_main" />

            <ImageView
                android:id="@+id/ads_image"
                android:layout_width="400dp"
                android:layout_height="53dp"
                android:scaleType="fitXY"
                android:src="@drawable/ads_umanji_guide" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ads_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:id="@+id/relativeLayout3">

                <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/mAvatarImageBtn"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/avatar_default_0"
                    app:riv_border_color="@color/colorPrimary"
                    app:riv_border_width="1px"
                    app:riv_corner_radius="5dp"
                    app:riv_oval="false" />

                <TextView
                    android:id="@+id/search"
                    android:layout_width="180dp"
                    android:layout_height="35dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@+id/mAvatarImageBtn"
                    android:layout_toRightOf="@+id/mAvatarImageBtn"
                    android:background="@drawable/shadow"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="search"
                    android:textSize="14dp" />

                <Button
                    android:id="@+id/mNotyCount"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="-10dp"
                    android:layout_toLeftOf="@+id/search"
                    android:layout_toStartOf="@+id/search"
                    android:background="@drawable/default_btn_red_radius"
                    android:shadowColor="#A8A8A8"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="5"
                    android:text="0"
                    android:textColor="#FFFFFF"
                    android:textSize="10dp"
                    android:visibility="gone" />


            </RelativeLayout>

            <com.makeramen.roundedimageview.RoundedImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/homeBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_home"
                app:riv_border_color="@color/colorPrimary"
                app:riv_border_width="1px"
                app:riv_corner_radius="33dp"
                app:riv_oval="false"
                android:layout_below="@+id/ads_image"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="55dp"/>

            <TextView
                android:id="@+id/mZoomLevelText"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="140dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:background="@drawable/btn_label"
                android:text="12"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="16dp" />

            <com.makeramen.roundedimageview.RoundedImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/mZoomBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="94dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/zoom_btn"
                android:padding="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/zoom_in"
                app:riv_corner_radius="5dp"
                app:riv_oval="false" />

            <com.makeramen.roundedimageview.RoundedImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/infoButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="centerCrop"
                android:src="@drawable/info"
                app:riv_border_color="@color/colorPrimary"
                app:riv_border_width="1px"
                app:riv_corner_radius="15dp"
                app:riv_oval="false"
                android:layout_below="@+id/ads_image"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="15dp"
                android:layout_marginTop="55dp"/>

            <!-- Keyword Community level 2 환경 / 에너지 -->

            <LinearLayout
                android:id="@+id/keyword_launcher_level2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/environment"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/keyword_environment"/>

                <ImageView
                    android:id="@+id/energy"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/keyword_energy" />

            </LinearLayout>

            <!-- Keyword Community level 3 영성-->

            <LinearLayout
                android:id="@+id/keyword_launcher_level3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/spiritual"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/keyword_spiritual"/>

            </LinearLayout>

            <!-- Keyword Community level 4 역사-->

            <LinearLayout
                android:id="@+id/keyword_launcher_level4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/history"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/keyword_history"/>

            </LinearLayout>

            <!-- Keyword Community level 5 통일-->

            <LinearLayout
                android:id="@+id/keyword_launcher_level5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/unity"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/keyword_unity"/>

            </LinearLayout>

            <!-- Keyword Community level 6 :: 건강 / 정치-->

            <LinearLayout
                android:id="@+id/keyword_launcher_level6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/health"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/keyword_health" />

                <ImageView
                    android:id="@+id/politics"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/keyword_politics" />


            </LinearLayout>


            <!-- Keyword Community level 7 :: 여행 / 산악 / 골프 / 낚시-->

            <LinearLayout
                android:id="@+id/keyword_launcher_level7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/climb"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/keyword_climb" />

                <ImageView
                    android:id="@+id/golf"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/keyword_golf" />

                <ImageView
                    android:id="@+id/icons"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/keyword_icons" />


            </LinearLayout>


        </RelativeLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/mainListContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/empty_main_post"
            android:clickable="true"
            android:focusable="false"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/headerPanel"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@color/colorPrimary"
                android:orientation="horizontal">

                <!--<TextView-->
                    <!--android:id="@+id/mZoomLevelText"-->
                    <!--android:layout_width="60dp"-->
                    <!--android:layout_height="50dp"-->
                    <!--android:gravity="center_vertical"-->
                    <!--android:paddingLeft="10dp"-->
                    <!--android:text="7"-->
                    <!--android:textColor="@color/white"-->
                    <!--android:textSize="14sp" />-->

                <TextView
                    android:id="@+id/mInfoTextPanel"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:freezesText="true"
                    android:gravity="center"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:paddingLeft="50dp"
                    android:paddingRight="50dp"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="26dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ic_slide" />


            </LinearLayout>

            <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="false" />
        </LinearLayout>


    </com.sothree.slidinguppanel.SlidingUpPanelLayout>

    <include
        layout="@layout/include_notice_panel"
        android:layout_width="match_parent"
        android:layout_height="53dp" />

    <ImageView
        android:id="@+id/mGuideImageView01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/guide_01"
        android:visibility="gone" />
</RelativeLayout>
