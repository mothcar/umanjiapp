                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:visibility="visible"/>

            <ImageView
                android:id="@+id/towerCrane"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/tower_crane_black"
                android:layout_above="@+id/say"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:visibility="visible"/>

            <ImageView
                android:id="@+id/say"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/say_black"
                android:layout_above="@+id/eye"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"/>

            <ImageView
                android:id="@+id/eye"
                android:src="@drawable/eye"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="30dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>


        </RelativeLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/mainListContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/empty_main_post"
                android:clickable="true"
                android:focusable="false"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/headerPanel"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/panel_arrow"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignTop="@+id/linearLayout6"
                        android:src="@drawable/ic_arrow_up" />

                    <TextView
                        android:id="@+id/mInfoTextPanel"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:ellipsize="marquee"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:freezesText="true"
                        android:gravity="center"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:paddingLeft="50dp"
                        android:paddingRight="50dp"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:textColor="@color/gray_text"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="26dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/ic_slide" />


                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/headerPanel"
                    android:background="@drawable/comment_shadow" />

                <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="false" />


            </LinearLayout>

            <!--
        community Keyword Group
        -->


            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/communityListContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/empty_main_post"
                android:clickable="true"
                android:focusable="false"
                android:orientation="vertical"
                android:visibility="visible">

                <!--<android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="false" />-->


                <android.support.design.widget.TabLayout
                    android:id="@+id/tabs"
                    style="@style/AppTheme.TabStyle"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="bottom" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/tabs"
                    android:background="@color/gray" />

                <!--app:tabMode="scrollable"-->

                <android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <android.support.v4.view.ViewPager
                        android:id="@+id/viewPaper"
