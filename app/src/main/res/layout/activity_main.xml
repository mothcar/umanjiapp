                        android:src="@drawable/keyword_politics_jpg" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:shadowColor="#000"
                        android:shadowRadius="9.0"
                        android:text="정치"
                        android:textColor="@color/white"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                </RelativeLayout>
            </LinearLayout>


            <!-- Keyword Community level 7 :: 여행 / 산악 / 골프 / 낚시-->

            <LinearLayout
                android:id="@+id/keyword_launcher_level7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">

                    <ImageView
                        android:id="@+id/climb"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/keyword_image"
                        android:src="@drawable/keyword_climb" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:shadowColor="#000"
                        android:shadowRadius="7.0"
                        android:text="등산"
                        android:textColor="@color/white"
                        android:textSize="14dp"
                        android:textStyle="bold" />


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="20dp">

                    <ImageView
                        android:id="@+id/golf"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/keyword_image"
                        android:src="@drawable/keyword_golf" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:shadowColor="#000"
                        android:shadowRadius="9.0"
                        android:text="골프"
                        android:textColor="@color/white"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                </RelativeLayout>

            </LinearLayout>

            <!-- Keyword Community level 8 :: 기타 여가 활동-->

            <LinearLayout
                android:id="@+id/keyword_launcher_level8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">

                    <ImageView
                        android:id="@+id/keyword_etc"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/keyword_image"
                        android:src="@drawable/keyword_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
