<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:background="@color/white"
    android:paddingBottom="14dp"
    android:paddingLeft="14dp"
    android:paddingRight="14dp"
    android:paddingTop="14dp">

    <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/userPhoto"
        android:layout_width="@dimen/list_item_avatar_size"
        android:layout_height="@dimen/list_item_avatar_size"
        android:layout_marginRight="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/avatar_default_0"
        app:riv_border_color="@color/colorPrimary"
        app:riv_border_width="1px"
        app:riv_corner_radius="5dp"
        app:riv_oval="false" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="false"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@+id/userPhoto"
        android:padding="5dp"
        android:text="bruce"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/parentType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="false"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@+id/userName"
        android:padding="5dp"
        android:text="이름없음"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textColor="@color/text"
        android:textSize="12dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/parentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="false"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@+id/parentType"
        android:padding="5dp"
        android:text="이름없음"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textColor="@color/text"
        android:textSize="12dp"
        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        android:id="@+id/createdAt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/userName"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/userPhoto"
        android:text="2015:11:05"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textColor="@color/text"
        android:textSize="8dp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/userPhoto"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/userPhoto"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="17dp"
            android:autoLink="all"
            android:text="내용입니다."
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="@color/text" />

        <TextView
            android:id="@+id/keyword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="17dp"
            android:autoLink="all"
            android:text="#키워드"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="10dp"
            android:textColor="@color/text"
            android:visibility="gone"/>


        <ImageView
            android:id="@+id/photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginTop="2dp"
            android:scaleType="fitStart"
            android:src="@drawable/empty"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/surveyPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/meta_bordered"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/surveyContentPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"></LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="15dp"
                android:text="# 클자를 클릭하여 투표에 참여하세요."
                android:textSize="8dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/metaPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/meta_bordered"
            android:orientation="vertical"
            android:padding="5dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/metaTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="제목"
                android:textSize="20dp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/metaDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="설명"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/metaPhoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitStart"
                android:visibility="gone" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/actionPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/replyBtn"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/replyBtn"
            android:layout_below="@+id/name"
            android:background="@drawable/default_btn_transparent"
            android:paddingBottom="5dp"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:text="가치생산 100 p"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/point"
                android:layout_toRightOf="@+id/point"
                android:text="댓글"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/replyCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_toEndOf="@+id/textView6"
                android:layout_toRightOf="@+id/textView6"
                android:text="10"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="10dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_toEndOf="@+id/textView6"
                android:layout_toRightOf="@+id/replyCount"
                android:text="   개"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="10dp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <LinearLayout
                android:id="@+id/likeBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/alert_ic_ads"
                    android:layout_marginLeft="30dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="16dp"
                    android:text="공익적인 글"
                    android:textColor="@color/gray_text"
                    android:textSize="12dp"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/replyBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/alert_ic_comment"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="댓글 달기"
                    android:textColor="@color/gray_text"
                    android:textSize="12dp" />

                </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
