<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <RelativeLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" >

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="40dp"
            android:layout_height="@dimen/tabs_height"
            app:layout_collapseMode="pin"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        <TextView
            android:id="@+id/headerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="#fff"
            android:text="포스트"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/headerLayout"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="5dp">

                <com.makeramen.roundedimageview.RoundedImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/userPhoto"
                    android:layout_width="@dimen/list_item_avatar_size"
                    android:layout_height="@dimen/list_item_avatar_size"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/avatar_default_0"
                    app:riv_border_color="@color/colorPrimary"
                    app:riv_border_width="1px"
                    app:riv_corner_radius="5dp"
                    app:riv_oval="false"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignTop="@+id/userPhoto"
                    android:layout_toRightOf="@+id/userPhoto"
                    android:layout_toEndOf="@+id/userPhoto"
                    android:layout_marginTop="3dp"
                    android:id="@+id/linearLayout2">

                    <TextView
                        android:id="@+id/userName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?attr/textAppearanceListItem"
                        android:text="bruce"
                        android:textSize="14dp"
                        />

                    <TextView
                        android:id="@+id/parentName"
                        android:textAppearance="?attr/textAppearanceListItem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:textColor="@color/text"
                        android:textStyle="bold"
                        android:text="이름없음"
                        android:visibility="gone"
                        android:layout_alignBottom="@+id/userName"
                        android:layout_toRightOf="@+id/userName"
                        android:layout_marginLeft="20dp" />


                </LinearLayout>

                <TextView
                    android:id="@+id/createdAt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:text="2015:11:05"
                    android:textSize="10dp"
                    android:textColor="@color/text"
                    android:layout_below="@+id/linearLayout2"
                    android:layout_toRightOf="@+id/userPhoto"
                    android:layout_toEndOf="@+id/userPhoto"
                    android:layout_marginTop="3dp"/>

                <com.makeramen.roundedimageview.RoundedImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/lookAround"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/maps_look_around"
                    android:scaleType="fitXY"
                    app:riv_border_color="@color/colorPrimary"
                    app:riv_border_width="1px"
                    app:riv_corner_radius="5dp"
                    app:riv_oval="false"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:visibility="gone"/>
                <ImageView
                    android:id="@+id/optionAlert"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/alert_ic_option"
                    android:scaleType="fitXY"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:visibility="visible"
                    android:padding="15dp"
                    android:layout_marginTop="5dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/linearLayout"
                    android:layout_below="@+id/userPhoto">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?attr/textAppearanceListItem"
                        android:text="내용입니다."
                        android:layout_marginTop="17dp"
                        android:textColor="@color/text"
                        android:layout_below="@+id/userPhoto"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginBottom="20dp"
                        android:autoLink="all"/>

                    <ImageView
                        android:id="@+id/photo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:scaleType="fitStart"
                        android:src="@drawable/empty"
                        android:layout_below="@+id/name"
                        android:visibility="gone"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/surveyPanel"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/meta_bordered"
                        android:visibility="gone">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/surveyContentPanel">
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="# 클자를 클릭하여 투표에 참여하세요."
                            android:layout_marginTop="10dp"
                            android:padding="15dp"
                            android:textSize="8dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/metaPanel"
                        android:orientation="vertical"
                        android:background="@drawable/meta_bordered"
                        android:padding="5dp"
                        android:visibility="gone"
                        android:layout_marginTop="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/metaTitle"
                            android:text="제목"
                            android:textStyle="bold"
                            android:textSize="20dp"
                            android:layout_marginBottom="10dp"
                            android:visibility="gone"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/metaDesc"
                            android:text="설명"
                            android:layout_marginBottom="10dp"
                            android:visibility="gone"/>
                        <ImageView
                            android:id="@+id/metaPhoto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scaleType="fitStart"
                            android:visibility="gone"/>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginTop="20dp"
                        android:padding="20dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="이 글 홍보하기"
                            android:id="@+id/postAd"
                            android:textStyle="bold"
                            android:textSize="20dp" />
                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/black_30" />

            <!--<ImageView-->
                <!--android:id="@+id/empty_states"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="200dp"-->
                <!--android:src="@drawable/empty_states"-->
                <!--android:visibility="visible"/>-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.RecyclerView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </RelativeLayout>





        </LinearLayout>

    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:src="@drawable/ic_discuss"
        android:visibility="visible"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="24dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10dp" />
</RelativeLayout>
